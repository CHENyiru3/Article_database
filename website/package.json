{
  "name": "academic-article-database",
  "version": "1.0.0",
  "description": "A curated collection of research papers with a modern web interface",
  "scripts": {
    "dev": "hugo server -D",
    "build": "hugo --minify",
    "preview": "hugo server --disableFastRender",
    "tailwind:build": "npx tailwindcss -i ./assets/css/main.css -o ./static/assets/css/main.css --watch",
    "install:deps": "npm install && npx hugo install"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "keywords": [
    "academic",
    "articles",
    "database",
    "research",
    "pdf",
    "hugo",
    "tailwindcss"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/academic-database"
  }
}
